<?xml version="1.0" encoding="utf-8"?>
<com.justwen.ime.view.keyboard.QwertyKeyboardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/row_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/keyboard_qwerty_key_height"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/keyboard_qwerty_ver_gap"
        android:orientation="horizontal">

        <include layout="@layout/keyboard_qwerty_row_1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/keyboard_qwerty_key_height"
        android:layout_below="@id/row_1"
        android:layout_marginTop="@dimen/keyboard_qwerty_ver_gap"
        android:orientation="horizontal">

        <include layout="@layout/keyboard_qwerty_row_2"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/keyboard_qwerty_key_height"
        android:layout_below="@id/row_2"
        android:layout_marginTop="@dimen/keyboard_qwerty_ver_gap"
        android:orientation="horizontal">

        <include layout="@layout/keyboard_qwerty_row_3_en"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/keyboard_qwerty_key_height"
        android:layout_below="@id/row_3"
        android:layout_marginTop="@dimen/keyboard_qwerty_ver_gap"
        android:orientation="horizontal">

        <include layout="@layout/keyboard_qwerty_row_4_en"/>

    </LinearLayout>

</com.justwen.ime.view.keyboard.QwertyKeyboardView>